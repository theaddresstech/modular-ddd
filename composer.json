{
    "name": "theaddresstech/modular-ddd",
    "description": "A Laravel package for building modular applications using Domain-Driven Design with Event Sourcing and CQRS",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "ddd",
        "domain-driven-design",
        "event-sourcing",
        "cqrs",
        "modular",
        "architecture"
    ],
    "authors": [
        {
            "name": "Laravel Team",
            "email": "support@laravel.com"
        }
    ],
    "homepage": "https://github.com/theaddresstech/modular-ddd",
    "support": {
        "issues": "https://github.com/theaddresstech/modular-ddd/issues",
        "source": "https://github.com/theaddresstech/modular-ddd"
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11.0",
        "orchestra/testbench": "^9.0|^10.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "LaravelModularDDD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "LaravelModularDDD\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelModularDDD\\ModularDddServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/phpunit"
        ]
    }
}